<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml"
	prefWidth="1200" prefHeight="650">
	<top>
		<ToolBar>
			<items>
				<Region styleClass="spacer" />
				<HBox alignment="center_left">
					<Label text="Focus Mode " />
					<ComboBox fx:id="cbFocusMode" promptText="--">
						<items />

					</ComboBox>
				</HBox>

				<Region styleClass="spacer" />
				<HBox alignment="center_left">
					<Label text="Flash Mode " />
					<ComboBox fx:id="cbFlashMode" promptText="--">
						<items />

					</ComboBox>
				</HBox>

				<Region styleClass="spacer" />
				<HBox alignment="center_left">
					<Label text="Exposure Mode " />
					<ComboBox fx:id="cbExposureMode" promptText="--">
						<items />

					</ComboBox>
				</HBox>

				<Region styleClass="spacer" />
				<HBox alignment="center_left">
					<Label text="Aperture " />
					<ComboBox fx:id="cbAperture" promptText="--">
						<items />

					</ComboBox>
				</HBox>

				<Region styleClass="spacer" />
				<HBox alignment="center_left">
					<Label text="Exposure " />
					<ComboBox fx:id="cbExposure" promptText="--">
						<items />

					</ComboBox>
				</HBox>

				<Region styleClass="spacer" />
				<HBox alignment="center_left">
					<Label text="ISO " />
					<ComboBox fx:id="cbIso" promptText="--">
						<items />

					</ComboBox>
				</HBox>

				<Region styleClass="spacer" />
				<HBox alignment="center_left">
					<Label text="Focal Length " />
					<Label fx:id="lblFocalLength" text="--" />
				</HBox>
			</items>
		</ToolBar>
	</top>
	<center>
		<ImageView />
	</center>
</fx:root>
